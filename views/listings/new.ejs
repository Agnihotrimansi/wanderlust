<% layout("/layouts/boilerplate") -%>
   <div class="row">
    <div  class="col-8  offset-2">
      <br></br>
    <h3>Creat a new listing</h3>
    <form method ="post" action="/listings" >
      <div class="mb-3">
        <label for ="title"  class="form-label">Title</label>
        <input 
         name="listing[title]"
         placeholder="Add a catchy title" 
         type="text" 
         class="form-control"
         enctype="multipart form-data"/>
        
      </div>

       <div class="mb-3">
        <label for ="description"  class="form-label">Description</label>
        <textarea
          name="listing[description]"
          class="form-control"
        ></textarea>
        <div class=" invalid-feedback "> please enter the short discription</div>
       </div>
        
       <div class="mb-3">
        <label for ="image"  class="form-label">Upload Listing Image</label>
        <input
          name="listing[image]"
          type="file"
          class="form-control" 
          required/>
         
       </div>
          
  <div class="row">

    <div class="mb-3 col-md-4">
    <label for ="price"  class="form-label">Price</label>
    <input 
    name="listing[price]" 
    placeholder="1200" 
    class="form-control"
    />
    
   </div>

    <div class="mb-3 col- md-8">
      <label for ="country"  class="form-label">Country</label>
      <input 
      name="listing[country]"
      placeholder="India"
      type="text" 
      class="form-control"
     
      />
      
    </div>

</div>

        
      <div class="mb-3">
        <label for ="location"  class="form-label">Location</label>
         <input
          name="listing[location]"
          placeholder="Satna,Madhya Pradesh"
          type="text"
          class="form-control"
          
        />
      </div>
        <br /><br />
        <button class="btn btn-dark add-btn mt-3">Add</button>
      </form>
    </form>
  </div>
  </div>